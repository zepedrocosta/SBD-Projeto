[mysqld]
innodb_buffer_pool_size = 4G              # Use ~50-70% of RAM if this is a dedicated DB server
innodb_log_file_size = 1G                 # Bigger log files reduce disk I/O
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 2       # Relax durability for performance in benchmarks
innodb_flush_method = O_DIRECT
innodb_io_capacity = 1000
innodb_io_capacity_max = 2000
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 0            # Let the engine auto-tune
max_connections = 200
table_open_cache = 2048
query_cache_type = 0
query_cache_size = 0
performance_schema = OFF                 # Turn off if you donâ€™t need monitoring stats
skip-log-bin
